/* pages/detail/inputPage/inputPage.wxss */

.back {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #ccc;
}

.title {
  font-size: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 50rpx 12rpx;
}

.titleValue {
  font-weight: 800;
  color: var(--themeC);
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.main {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}

.titleTitle {
  margin: 0 14rpx;
}

.content {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 34rpx 0 34rpx;
  margin: 0 24rpx;
}

.contentOther {
  background: #fff;
  border-radius: 12rpx;
  margin: 18rpx 0;
  padding: 57rpx 34rpx;
  width: calc(100% - 116rpx);
}

.contentBox {
  padding: 44rpx 0;
}

.contentTtitle {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.contentTitleTitle {
  margin-left: 30rpx;
  color: #33466d;
}

.inputLine {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-top: 28rpx;
}

.inputBox {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
}

.inputBox:first-child {
  margin-right: 85rpx;
}

.inputTitle {
  width: 85rpx;
  color: #333;
  white-space: nowrap;
}

input {
  flex-grow: 1;
  text-align: right;
  padding: 0 16rpx;
}

.btn {
  border-radius: 100px;
  background: var(--themeCG);
  height: 92rpx;
  width: 702rpx;
  line-height: 92rpx;
  text-align: center;
  color: #1c1c1c;
  font-size: 32rpx;
}

.otherInput {
  background: #f5f5f5;
  border-radius: 5rpx;
  height: 74rpx;
  text-align: left;
  line-height: 74rpx;
  margin: 21rpx 0 48rpx 0;
}
