/* pages/detail/resPage/resPage.wxss */

.title {
  font-size: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 50rpx 12rpx;
}

.titleValue {
  font-weight: 800;
  color: var(--themeC);
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.backBox {
  background: #000;
  position: absolute;
  height: 560rpx;
  width: 100%;
  top: 0;
}

.main {
  position: relative;
  z-index: 1;
  background: #fff;
  width: 710rpx;
  margin: 458rpx auto;
  border-radius: 12rpx;
  padding: 56rpx 0;
}

.mainTitleText {
  font-size: 32rpx;
  color: #33466d;
  font-weight: 800;
}

.mainTitle {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.titleLeft {
  font-size: 32rpx;
  font-weight: 800;
  color: rgba(28, 28, 28, 1);
  border-left: 8rpx solid #33466d;
  padding-left: 20rpx;
  height: 36rpx;
  line-height: 36rpx;
  margin: 61rpx 0 50rpx 10rpx;
}

.infoBox {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.infoTop {
  font-size: 32rpx;
  color: #ccc;
}

.money {
  font-size: 90rpx;
  font-family: DIN;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(176deg, rgba(248, 227, 174, 1) 0%, rgba(212, 178, 115, 1) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.infoBottom {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.infoMiddle {
  margin: 30rpx 0;
}

.tr {
  display: flex;
  flex-direction: row;
  height: 84rpx;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.tr view {
  width: 50%;
  text-align: center;
}

.header {
  color: #999;
  font-size: 24rpx;
}

.tdValue {
  color: #33466d;
  font-weight: 800;
}
